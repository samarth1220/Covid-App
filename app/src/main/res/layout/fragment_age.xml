<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textColor="#5142B2"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/age_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/more10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:button="@drawable/custom_checkbox"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/more10"
                    android:fontFamily="@font/roboto"
                    android:padding="10dp"
                    android:textColor="#5142B2"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"/>

                <RadioButton
                    android:id="@+id/more40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:button="@drawable/custom_checkbox"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/more40"
                    android:fontFamily="@font/roboto"
                    android:padding="10dp"
                    android:textColor="#5142B2"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"/>

                <RadioButton
                    android:id="@+id/more80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/more80"
                    android:button="@drawable/custom_checkbox"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:fontFamily="@font/roboto"
                    android:padding="10dp"
                    android:textColor="#5142B2"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"/>

            </RadioGroup>

            <Button
                android:id="@+id/next_age"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_blue_btn"
                android:textColor="#fff"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </FrameLayout>


</ScrollView>