<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_form"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/self_assesment_test"
                    android:textColor="#fff"
                    android:textSize="20sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8sp"
                    android:padding="50dp"
                    app:cardCornerRadius="30dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/result"
                        android:textColor="#5142B2"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/risk_img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="80dp" />

                    <TextView
                        android:id="@+id/risk_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="140dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="80dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#5142B2"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/risk_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="140dp"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#0C8AEA"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/random_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="250dp"
                            android:gravity="center_horizontal"
                            android:text="@string/warning_result"
                            android:textColor="#0C8AEA"
                            android:textSize="18sp" />


                        <Button
                            android:id="@+id/diet_plan"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/rounded_button_blue_border"
                            android:fontFamily="@font/roboto"
                            android:text="@string/diet_plan"
                            android:textColor="#5142B2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/excersise_plan"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/rounded_button_blue_border"
                            android:fontFamily="@font/roboto"
                            android:text="@string/excersise_plan"
                            android:textColor="#5142B2"
                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>