<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreventiveMeasuresActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="30dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:paddingBottom="100dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:text="@string/preventive_1"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_2"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_3"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_4"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_5"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_6"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_7"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_8"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_9"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/preventive_10"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>

                </ScrollView>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_blue_text"
            android:ems="10"
            android:fontFamily="@font/arbutus"
            android:gravity="center"
            android:maxLines="2"
            android:padding="10dp"
            android:text="Preventive  Measures"
            android:textColor="#5142B2"
            android:textSize="20sp"/>
    </RelativeLayout>
</LinearLayout>